@using WebApp.ViewModels
@model IEnumerable<PersonViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Persons list</h2>
<div class="row">
    <table class="table table-hover table-bordered">
        <th>
            First name
        </th>
        <th>
            Last name
        </th>
        <th>
            Age
        </th>
        <th>
            Actions
        </th>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(x => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Age)
                </td>
                <td>
                    <a href="#">Edit</a> /
                    <a href="#">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>

<div class="row">
    <a ref="#" class="btn btn-default right" data-toggle="modal" data-target="#addPersonModal">Add</a>
</div>



<!-- Modal -->
<div class="modal fade" id="addPersonModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add new person</h4>
            </div>
            <div class="modal-body">
               @using (Html.BeginForm("AddPerson","Persons"))
               {
  
               }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>